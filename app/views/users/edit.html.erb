<div class="container">
	<div class="row">
		<div class="col-12">
			<br>
			<h2><%=t("user.edit")%></h2>
			<br/>
			<br/>

			<%= render partial: "users/form", :locals => { user:  @profile_user} %>
			<br/>
			<hr>
			<h4><%=t("account.cancel")%></h4>
			<p><%= button_to t("account.cancel"), (current_user.isAdmin? and current_user.id != @profile_user.id) ? "/users/#{@profile_user.id}":registration_path(resource_name), data: { confirm: t("dictionary.are_you_sure") }, method: :delete, class: "btn btn-outline-dark" %></p>

			<%= link_to t("dictionary.back"), :back %>
			<br/>
			<br/>
			<br/>
		</div>
	</div>
</div>