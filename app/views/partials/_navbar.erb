<%active = request.fullpath%>
<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light2 <%=@searching ? "search" : ""%>">
  <a class="navbar-brand" href="#">
    <img class="navbar-logo" src="/img/LogoOrange.jpg" alt=""/> <span class="navbar-brand-title"> Orange </span>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item <%=active  == "/" ? "active" : ""%>">
        <a class="nav-link text-center" href="/"><%= t('navbar.who') %></a>
      </li>
      <li class="nav-item <%=active  == "/courses/search" ? "active" : ""%>">
        <a class="nav-link text-center" href="/courses/search"><%= t('navbar.courses') %><!-- <span class="sr-only">(current)</span> --></a>
      </li>
      <li class="nav-item <%=active  == "/webinars/search" ? "active" : ""%>">
        <a class="nav-link text-center" href="/webinars/search"><%= t('navbar.webinars') %></a>
      </li>
      <%if @user[:admin]%>
        <li class="nav-item dropdown">
          <a class="nav-link text-center dropdown-toggle" data-target="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <span class="orange">Admin</span>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/courses/new"><%= t('navbar.new_course') %></a>
              <a class="dropdown-item" href="/webinars/new"><%= t('navbar.new_webinar') %></a>
            <!-- <div class="dropdown-divider"></div> -->
          </div>
        </li>
      <%end%>
    </ul>
    <% unless (@searching) %>
      <form class="form-inline my-2 my-lg-0 search-bar d-none d-lg-inline" action="/courses/search">
        <input class="form-control mr-sm-2 search-bar input input-search"  name="query" placeholder="" aria-label="<%= t('navbar.search') %>" type="dsearch" autocomplete="off">
        <button class="btn my-2 my-sm-0 btn-link btn-search" type="submit"><img src="/img/search.svg" class="search-icon"/></button>
      </form>
    <% end %>
    <div class=" my-2 my-lg-0 text-center user-name-container <%= @isLoggedIn ? "logged-in" : ""%>">
      <%if @isLoggedIn%>
        <a href="/profile">
          <img src="<%=@user[:photo_file_path]%>" class="user-img"/>
          <span class="user-name"><%=@user[:name]%></span>
        </a>
      <%else%>
      <div class="btn-group">
        <button class="btn btn-outline-dark dropdown-toggle" type="button"  id="loginDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           <%= t('navbar.login') %>
        </button>
        <%=render partial: "partials/login_dropdown"%>
      </div>
      <%end%>
    </div>

  </div>
</nav>

<div class="navbar-placeholder"></div>
