<div class="event-calendar hidden" data-date="<%= event[:date].strftime("%d-%m-%Y")%>">
	<h2 class="event-title"><%=event[:title]%></h2>
	<p class="event-date"><%=event[:date]%></p>
	<p class="event-duration"><b><%=t("course.duration")%>:</b> <%=event[:duration]%></p>
	<p class="event-language"><b><%=t("course.language")%>:</b> <%=event[:language]%></p>
</div>