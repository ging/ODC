			</div>
		</div>
<script type="text/javascript">
	var utag_data = {
	}
	function openCategory(e,t){var o,n,c;for(n=document.getElementsByClassName("tabcontent"),o=0;o<n.length;o++)n[o].style.display="none";for(c=document.getElementsByClassName("tablinks"),o=0;o<c.length;o++)c[o].className=c[o].className.replace(" active","");document.getElementById(t).style.display="block",e.currentTarget.className+=" active"}


	function openPrompt() {
	    utag.gdpr.showConsentPreferences(), document.getElementById("defaultOpen").click(), (document.getElementsByTagName("body")[0].className += " prompt_open");
	}

	function privacy(event){
		openPrompt();
	}

	function acceptCookies(event){
		setCookies("true");
	}

	function declineCookies(event){
		setCookies(0);
	}

	function setCookies(value) {
		Cookies.set('cookies_set', 1, { expires: Infinity });
		utag.gdpr.setConsentValue(value);
		$('#layer-cookies').addClass("d-none");
		$('.cookie-placholder').addClass("d-none");
		$('#__tealiumGDPRecModal').modal("hide");
		jQuery('body').css('overflow','auto');
	}

	<%if visible %>
	$(()=>{
		$('#__tealiumGDPRecModal').modal("show");
		jQuery('body').css('overflow','hidden');
	})
	<%end%>

</script>
