
<div class="container">
	<div class="row">
		<div class="col-12">
			<br>
			<h2><%=t("course.new")%></h2>
			<br/>
			<br/>

			<form>
			  <div class="form-group row">
			    <label for="inputTitle3" class="col-sm-2 col-form-label"><%=t('course.title')%></label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputTitle3" placeholder="" value="<%=@course[:title]%>">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="inputTitle3" class="col-sm-2 col-form-label"><%=t('course.duration')%></label>
			    <div class="col-sm-10">
			      <input type="text" name="daterange" class="form-control" id="inputTitle3" placeholder="" value="01/01/2018 - 15/01/2018">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="inputURL3" class="col-sm-2 col-form-label"><%=t('course.url')%></label>
			    <div class="col-sm-10">
			      <input type="text" class="form-control" id="inputURL3" placeholder="" value="<%=@course[:url]%>">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="inputDesc3" class="col-sm-2 col-form-label"><%=t('course.desc')%></label>
			    <div class="col-sm-10">
			      <textarea  class="form-control" id="inputDesc3" placeholder="" value="<%=@course[:desc]%>" rows="6"></textarea>
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="row">
			      <legend class="col-form-label col-sm-2 pt-0"><%=t('course.type')%></legend>
			      <div class="col-sm-10">
			      	<div class="custom-control custom-radio ">
			      	  <input type="radio" id="mooc" name="type" class="custom-control-input" value="MOOC">
			      	  <label class="custom-control-label" for="mooc"><%=t('course.mooc')%></label>
			      	</div>
			      	<div class="custom-control custom-radio ">
			      	  <input type="radio" id="spoc" name="type" class="custom-control-input" value="SPOC">
			      	  <label class="custom-control-label" for="spoc"><%=t('course.spoc')%></label>
			      	</div>
			      	<div class="custom-control custom-radio ">
			      	  <input type="radio" id="moc" name="type" class="custom-control-input" value="SPOC">
			      	  <label class="custom-control-label" for="moc"><%=t('course.moc')%></label>
			      	</div>			       
			        
			      </div>
			    </div>
			  </div>
			  <div class="form-group row">
			    <legend class="col-form-label col-sm-2 pt-0"><%=t('course.tags')%></legend>
			    <div class="col-sm-10">
			        <div class="custom-control form-check custom-checkbox">  
			            <input type="checkbox" class="custom-control-input" id="customCheck1" name="tags" value="cybersecurity">  
			            <label class="custom-control-label" for="customCheck1"><%=t('tags.cybersecurity')%></label>  
			        </div>  
			        <div class="custom-control form-check custom-checkbox">  
			            <input type="checkbox" class="custom-control-input" id="customCheck2" name="tags" value="esafety">  
			            <label class="custom-control-label" for="customCheck2"><%=t('tags.esafety')%></label>  
			        </div>
			    </div>
			  </div>
			  <div class="form-group row">
			    <div class="col-sm-10">
			      <button type="submit" class="btn btn-orange">Sign in</button>
			    </div>
			  </div>
			</form>
			
		</div>
	</div>
</div>
<script>
$(function() {
	var dayArray = ["<%=t('calendar.days.sun')%>", "<%=t('calendar.days.mon')%>", "<%=t('calendar.days.tue')%>", "<%=t('calendar.days.wed')%>", "<%=t('calendar.days.thu')%>", "<%=t('calendar.days.fri')%>", "<%=t('calendar.days.sat')%>"];
	var monthArray = ["<%=t('calendar.months.jan')%>", "<%=t('calendar.months.feb')%>", "<%=t('calendar.months.mar')%>", "<%=t('calendar.months.apr')%>", "<%=t('calendar.months.may')%>", "<%=t('calendar.months.jun')%>", "<%=t('calendar.months.jul')%>", "<%=t('calendar.months.aug')%>", "<%=t('calendar.months.sep')%>", "<%=t('calendar.months.oct')%>", "<%=t('calendar.months.nov')%>", "<%=t('calendar.months.dec')%>"];
  $('input[name="daterange"]').daterangepicker({
    "opens": "left",
    "locale": {
          "format": "DD/MM/YYYY",
          "separator": " - ",
          "applyLabel": "Apply",
          "cancelLabel": "Cancel",
          "fromLabel": "From",
          "toLabel": "To",
          "customRangeLabel": "Custom",
          "weekLabel": "W",
          "daysOfWeek": dayArray.map(a=>a.slice(0,1)),
          "monthNames": monthArray,
          "firstDay": 1
      }
  }, function(start, end, label) {
    console.log('New date range selected: ' + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')');
  });
});
</script>
