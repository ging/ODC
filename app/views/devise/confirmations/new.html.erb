<div class="container-fluid session-form">
	<div class="row">
		<div class="col-12 col-md-8 col-lg-6">
			<br>
			<h2><%=t("login.confirmation_instructions")%></h2>
			<br>
			<br>

			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'custom-form' }) do |f| %>
			<!--<%= devise_error_messages! %>-->

				<%= render partial: "layouts/form_field", :locals => {
				    label: t('user.email'), 
				    type: "text", 
				    name:"user[email]", 
				    id: "email", 
				    required: true,
				    placeholder: "", 
				    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
				  }  %>

			<div class="actions">
				<p><%=t("login.confirmation_instructions_resend")%></p>
				<%= f.submit t("login.confirmation_instructions_resend_btn"), class:"btn btn-orange" %>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>

</div>
