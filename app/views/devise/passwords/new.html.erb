<div id="" class="container">
	<div class="row">
		<div class="col-12">
			<br>
			<h2 class="password_forgot_title"><%=t("login.password_forgot")%></h2>
			<br>
			<br>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'custom-form' }) do |f| %>
			<%= devise_error_messages! %>
			<%= render partial: "layouts/form_field", :locals => {
				label: t('user.email'), 
				type: "text", 
				name:"user[email]", 
				id: "email", 
				required: true,
				placeholder: "", 
				value: @user[:email] 
			}  %>

			<div class="actions">
				<%= f.submit t("login.password_reset_instructions"), :class => 'btn btn-orange forgot_password_button' %>
			</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>