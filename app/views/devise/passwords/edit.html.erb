<div class="container-fluid session-form">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6">
      <br>
      <h2 class="password_forgot_title"><%=t("login.password_change")%></h2>
      <br>
      <br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , class: "custom-form"}) do |f| %>
    <!--<%= devise_error_messages! %>-->
    <%= f.hidden_field :reset_password_token %>
      <%= render partial: "layouts/form_field", :locals => {
        label: t("login.password_new"), 
        type: "password", 
        name:"user[password]", 
        id: "password", 
        required: true,
        placeholder: "", 
        value: "" 
      }  %>
      <%= render partial: "layouts/form_field", :locals => {
        label: t("login.password_new_confirmation"), 
        type: "password", 
        name:"user[password_confirmation]", 
        id: "password_confirmation", 
        required: true,
        placeholder: "", 
        value: ""
      }  %>

    <div class="actions">
      <%= f.submit t("devise.reset_password.change_my_password"), :class => 'btn btn-orange' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
</div>